@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Uniplan</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
    <link rel="stylesheet" href="~/css/Style.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/air-datepicker/2.2.3/css/datepicker.min.css" integrity="sha512-Ujn3LMQ8mHWqy7EPP32eqGKBhBU8v39JRIfCer4nTZqlsSZIwy5g3Wz9SaZrd6pp3vmjI34yyzguZ2KQ66CLSQ==" crossorigin="anonymous" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-dark navbar-fixed-top" id="nav">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--<img src="~/Content/images/logo/uniplanlogo.png" style="width: 30px;height: 30px" />-->
                @Html.ActionLink("UniversityStudyPlanner", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                @if (User.Identity.IsAuthenticated)
                {
                    if (User.Identity.GetUserName() == "admin@gmail.com")
                    {
                        <ul class="nav navbar-nav">
                            @* <li>@Html.ActionLink("Home", "Index", "Home")</li> *@
                            <li>@Html.ActionLink("สถิติน่าสนใจ", "", "")</li>
                            <li>@Html.ActionLink("จัดการบทความ", "Index", "Blogs")</li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">รายงาน <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li>@Html.ActionLink("รายงานสรุปบัญชีผู้ใช้", "Index", "Report")</li>
                                    <li>@Html.ActionLink("รายงานสรุปเป้าหมาย", "ReportGoal", "Report")</li>
                                    <li>@Html.ActionLink("รายงานสรุปแพลนเนอร์", "ReportPlanner", "Report")</li>
                                    <li>@Html.ActionLink("รายงานสรุปบทความ", "ReportBlog", "Report")</li>
                                </ul>
                            </li>
                            @*<li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    }
                    else
                    {
                        <ul class="nav navbar-nav">
                            @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                                <li>@Html.ActionLink("Planner", "Index", "Planners")</li>
                                <li>@Html.ActionLink("Goal", "Index", "Goals")</li>
                                <li>@Html.ActionLink("Blog", "Index", "Blog")</li>*@
                            @*<li>@Html.ActionLink("ติดตามอารมณ์", "", "")</li>*@
                            <li>@Html.ActionLink("แพลนเนอร์", "Index", "Planners")</li>
                            <li>@Html.ActionLink("เป้าหมาย", "Index", "Goals")</li>
                            <li>@Html.ActionLink("บทความ", "Index", "Blogs")</li>

                            @*<li>@Html.ActionLink("About", "About", "Home")</li>
                                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Blog", "Index", "Blog")</li>*@
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("สถิติน่าสนใจ", "Index", "Home", null, null, "Statistic", null, null)</li>
                        <li>@Html.ActionLink("นักพัฒนา", "Index", "Home", null, null, "Developer", null, null)</li>
                        <li>@Html.ActionLink("บทความ", "Index", "Blogs")</li>
                    </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--<div class="container body-content">-->
    <div class="fluid-container">
        @RenderBody()
        <div align="center">
            <footer id="foot">
                <p>
                    &copy; @DateTime.Now.Year - UniversityStudyPlanner(Uniplan) <br />
                    Information Technology, Suranaree University Of Technology - TH
                </p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/air-datepicker/2.2.3/js/datepicker.min.js" integrity="sha512-sM9DpZQXHGs+rFjJYXE1OcuCviEgaXoQIvgsH7nejZB64A09lKeTU4nrs/K6YxFs6f+9FF2awNeJTkaLuplBhg==" crossorigin="anonymous"></script>
    <script src="https://cdn.amcharts.com/lib/4/core.js"></script>
    <script src="https://cdn.amcharts.com/lib/4/charts.js"></script>
    <script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
    @RenderSection("scripts", required: false)
    @*@RenderSection("scripts", false)*@
</body>
</html>
