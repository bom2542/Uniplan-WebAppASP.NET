@using Microsoft.AspNet.Identity

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Uniplan</title>
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css">
