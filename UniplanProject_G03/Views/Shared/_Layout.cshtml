                            <li>@Html.ActionLink("แพลนเนอร์", "", "")</li>
                            <li>@Html.ActionLink("เป้าหมาย", "", "")</li>
                            <li>@Html.ActionLink("บทความ", "", "")</li>

                            @*<li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        </ul>
                    }
                }
                else
                {
                    <ul class="nav navbar-nav">
                        @*<li>@Html.ActionLink("Blog", "Index", "Blog")</li>*@
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                        <li>@Html.ActionLink("บทความที่น่าสนใจ", "Index", "Home", null, null, "Blog", null, null)</li>
                        <li>@Html.ActionLink("สถิติน่าสนใจ", "Index", "Home", null, null, "Statistic", null, null)</li>
                        <li>@Html.ActionLink("นักพัฒนา", "Index", "Home", null, null, "Developer", null, null)</li>
                    </ul>
                }

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <!--<div class="container body-content">-->
    <div class="fluid-container">
        @RenderBody()
        <div align="center">
            <footer id="foot">
                <p>
                    &copy; @DateTime.Now.Year - UniversityStudyPlanner(Uniplan) <br />
                    Information Technology, Suranaree University Of Technology - TH
                </p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    @*@RenderSection("scripts", false)*@
</body>
</html>
